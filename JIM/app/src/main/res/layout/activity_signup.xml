<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.abirsoni.jim.Sign" 
    android:background="@drawable/abc">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="REGISTER HERE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFF" />

   <ImageButton
       android:id="@+id/infoo"
       android:layout_width="50dip"
       android:layout_height="50dip"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       android:src="@drawable/info" />

   <Button
       android:id="@+id/signup"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/repass"
       android:layout_alignTop="@+id/infoo"
       android:text="Sign Up" />

   <EditText
       android:id="@+id/repass"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/infoo"
       android:layout_alignLeft="@+id/pass"
       android:layout_marginBottom="46dp"
       android:ems="10"
       android:hint="Re-Type PASSWORD"
       android:inputType="textPassword" />

   <EditText
       android:id="@+id/pass"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/repass"
       android:layout_centerHorizontal="true"
       android:layout_marginBottom="15dp"
       android:ems="10"
       android:hint="Password"
       android:inputType="textPassword" />

   <EditText
       android:id="@+id/batch"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/pass"
       android:layout_alignRight="@+id/pass"
       android:ems="10"
       android:hint="BATCH"
       android:inputType="textPersonName" />

   <EditText
       android:id="@+id/branch"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/batch"
       android:layout_alignLeft="@+id/batch"
       android:layout_marginBottom="15dp"
       android:ems="10"
       android:hint="BRANCH"
       android:inputType="textPersonName" />

   <EditText
       android:id="@+id/name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/branch"
       android:layout_alignLeft="@+id/branch"
       android:ems="10"
       android:hint="NAME"
       android:inputType="textPersonName" />

   <android.widget.EditText
       android:id="@+id/rnum"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/name"
       android:layout_alignLeft="@+id/name"
       android:layout_marginBottom="22dp"
       android:ems="10"
       android:hint="ROLL NUMBER"
       android:inputType="number" >

       <requestFocus />
   </android.widget.EditText>

</RelativeLayout>
